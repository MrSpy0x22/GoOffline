<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Czas snu"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Zdefiniowanie czasu snu pozwala zastosować polityke blokowania aplikacji niezależnie od tego, czy wykorzystano limit czasowy korzystania z aplikacji."
        />

    <LinearLayout
        android:id="@+id/sleeptime_row_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Włącz czas snu"
            />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sleeptime_row_enable_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

    </LinearLayout>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider_sleeptime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="24"
        android:stepSize="1"
        app:values="@array/default_sleep_time_range"
        />

</LinearLayout>