<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activityPadding"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/dialog_logactions_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logowanie do alikacji"
        />
    <CheckBox
        android:id="@+id/dialog_logactions_blocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blokowanie aplikacji"
        />
    <CheckBox
        android:id="@+id/dialog_logactions_limits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limit / Tryb snu"
        />

</LinearLayout>