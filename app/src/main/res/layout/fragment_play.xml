<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/activityPadding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activityPadding"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="Odgadnij słówko:"/>

        <TextView
            android:id="@+id/play_text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:text="Kategoria"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/play_text_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="N A T A L I A"
            android:textSize="42sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_layout_scene"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/play_text_attempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activityPadding"
                android:text="1/5"
                />

            <ProgressBar
                android:id="@+id/play_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:scaleY="3.0"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/activityPadding"
                android:src="@drawable/ic_play_gameover_indicator"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_layout_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_key_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="A"
                />

            <Button
                android:id="@+id/play_key_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="B"
                />

            <Button
                android:id="@+id/play_key_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="C"
                />

            <Button
                android:id="@+id/play_key_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="D"
                />

            <Button
                android:id="@+id/play_key_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="E"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_layout_keys_a_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_key_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="F"
                />

            <Button
                android:id="@+id/play_key_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="G"
                />

            <Button
                android:id="@+id/play_key_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="H"
                />

            <Button
                android:id="@+id/play_key_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="I"
                />

            <Button
                android:id="@+id/play_key_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="J"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_key_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="K"
                />

            <Button
                android:id="@+id/play_key_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="L"
                />

            <Button
                android:id="@+id/play_key_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="M"
                />

            <Button
                android:id="@+id/play_key_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="N"
                />

            <Button
                android:id="@+id/play_key_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="O"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_layout_keys_j_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_key_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="P"
                />

            <Button
                android:id="@+id/play_key_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="R"
                />

            <Button
                android:id="@+id/play_key_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="S"
                />

            <Button
                android:id="@+id/play_key_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="T"
                />

            <Button
                android:id="@+id/play_key_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="U"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_key_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="V"
                />

            <Button
                android:id="@+id/play_key_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="W"
                />

            <Button
                android:id="@+id/play_key_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="X"
                />

            <Button
                android:id="@+id/play_key_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="Y"
                />

            <Button
                android:id="@+id/play_key_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.GoOffline.Fragment.Play.TextButton"
                android:text="Z"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_key__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activityLayoutPaddingSmaller"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="SPACJA"
                />

            <Button
                android:id="@+id/play_key_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/activityLayoutPaddingSmaller"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="OD NOWA"
                />

            <Button
                android:id="@+id/play_key_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activityLayoutPaddingSmaller"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="OK"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>