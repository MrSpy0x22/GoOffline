<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoOffline" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorBackground">@color/background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/statusBackground</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="CardTextHeader">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="Theme.GoOffline.ToolbarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/background</item>
        <item name="titleTextStyle">@style/Theme.GoOffline.ToolbarTitleStyle</item>
    </style>

    <style name="Theme.GoOffline.ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColorPrimary">@color/panelText</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- FRAGMENT TOGGLER BUTTON -->
    <style name="Theme.GoOffline.Fragment.Toggler" parent="">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:background">@drawable/ripple_fragment_toggler</item>
    </style>

    <style name="Theme.GoOffline.Fragment.Toggler.Caption" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textCaptionSize</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="Theme.GoOffline.Fragment.Toggler.Switch" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <!-- FRAGMENT CAPTION -->
    <style name="Theme.GoOffline.Fragment.Caption" parent="">
        <item name="android:paddingHorizontal">@dimen/activityLayoutPadding</item>
        <item name="android:paddingVertical">@dimen/separatorSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textCaptionSize</item>
        <item name="android:background">#00000000</item>
    </style>

    <!-- VIEW LABEL -->
    <style name="Theme.GoOffline.Fragment.Label" parent="Theme.GoOffline.Fragment.Caption">
        <item name="android:paddingVertical">@dimen/separatorSizeSmaller</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- FRAGMENT TOGGLEDR DESCRIPTION -->
    <style name="Theme.GoOffline.Fragment.TogglerDescription" parent="">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">@dimen/activityLayoutPadding</item>
        <item name="android:textSize">@dimen/textContentSize</item>
    </style>

    <!-- FRAGMENT BUTTON SHORTCUT -->
    <style name="Theme.GoOffline.Fragment.BtnShortcut" parent="">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ripple_fragment_button_shortcut</item>
    </style>

    <style name="Theme.GoOffline.Fragment.BtnShortcut.Caption" parent="">
        <item name="android:textSize">@dimen/textCaptionSize</item>
        <item name="android:background">#00000000</item>
    </style>
</resources>